<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="it.moondroid.carousellayoutdemo.CoverFlowActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back_home"
    >

    <RelativeLayout
        android:id="@+id/home1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
        android:id="@+id/coverflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        coverflow:coverHeight="@dimen/cover_height"
        coverflow:coverWidth="150dp"
        coverflow:maxScaleFactor="1.25"
        coverflow:reflectionGap="0px"
        coverflow:rotationThreshold="0.5"
        coverflow:scalingThreshold="0.5"
        coverflow:spacing="0.4"
       />

    <TextSwitcher
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"

        android:layout_alignParentBottom="false"
        android:layout_below="@+id/coverflow"
        android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home2"
        android:layout_below="@+id/home1"
        android:layout_marginLeft="15dp"
        android:background="@null"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:textColor="#ffffffff"
            android:textSize="17sp"

            android:textStyle="bold"

            />
        </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home3"
        android:layout_below="@+id/home2"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/contact_border"
            android:layout_marginBottom="2dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:id="@+id/imageView"
            android:src="@drawable/trending"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <ScrollView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView">
            <com.romainpiel.shimmer.ShimmerTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Engine Workshop With Industrial Visit"
                android:id="@+id/shim1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"

                android:padding="16sp"
                android:textColor="#000000" />
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home4"
        android:layout_below="@+id/home3"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/contact_border"
        android:layout_marginBottom="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"

            android:id="@+id/imageView1"
            android:src="@drawable/trending"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <ScrollView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView1">
            <com.romainpiel.shimmer.ShimmerTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="BlueBot Workshop"
                android:id="@+id/shim2"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:padding="16sp"
                android:textColor="#000000" />
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home5"
        android:layout_below="@+id/home4"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/contact_border"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"

            android:id="@+id/imageView2"
            android:src="@drawable/trending"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <ScrollView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView2">
            <com.romainpiel.shimmer.ShimmerTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Guest Lecture by-Dr.C.Sylendra Babu"
                android:id="@+id/shim3"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:padding="16sp"
                android:textColor="#000000" />
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home6"
        android:layout_below="@+id/home5"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Manusys'15"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            android:textStyle="bold"

            />
    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home7"
        android:layout_below="@+id/home6"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/contact_border">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:text="As the signature event of the Association of Manufacturing Engineers, Manusys marks the confluence of students belonging to various disciplines. It is the annual symposium comprising of three granddays of events, exhibitions, workshops, guest lectures, paper presentations and several other interesting slots in the agenda that provide a unique platform for students to exhibit their talent and creativity.
"
        android:textColor="#ffffffff"
        android:textSize="15dp"
        android:paddingLeft="1dp"
        android:textStyle="italic"
        />
</RelativeLayout>
</RelativeLayout>




    </ScrollView>

</RelativeLayout>