<?xml version="1.0" encoding="utf-8"?>
<!-- This is the fragment  to be displayed for a section associated with a tab -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/top">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/engine">


                <com.flaviofaria.kenburnsview.KenBurnsView

                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/robotics"
                    android:id="@+id/imageView3" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/engine2"
                android:layout_below="@+id/engine"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/home_background_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What's this?"
                    android:textColor="#ff000000"
                    android:textSize="17sp"
                    android:textStyle="bold"

                    />
            </RelativeLayout>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about3"
                android:layout_below="@+id/engine2"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/home_background_selector">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ever wondered how a robot the size of a HUMMER handles components smaller than a Ping-Pong ball with the gentleness of a mother caring for her new-born child? Ever wanted to build one of your own?
\nManusys’15 in association with TESPA India brings to you a workshop aimed at Robotics hobbyists and students who wish to learn art of building sophisticated industry grade robots.  The workshop covers essential concepts that go into building a successful robot.
\n
\nCONCEPTS TAUGHT:
\n#CONCEPTS OF A ROBOT
\n#DEFINITION OF ROBOT
\n#PRINCIPLES OF MEASUREMENT
\n#HUMAN ANALOGY
\n#BASIC ELECTRONICS INVOLED
\n#COMMUNICATION
\n#SENSING
\n
\nRULES AND REGULATIONS
\n•	Eligibility-all college students are welcome; a valid Manusys id is a must
\n•	Individual participation only
\nCertificates will be provided to the participants only if he/she attends all the sessions. Failing to do so, the participant's registration will stand cancelled and he/she will also have to forfeit the registration fee.
\nFor accommodations please visit accommodation tab. Participants should take care of their food on their own.
\nFor recent updates and information check our website and your e-mail.
\n\nWORKSHOP DATE:
\n18th march 2015
\n\nWORKSHOP FEE:
\nWorkshop fee is Rs 500/- . Fee once paid are not refundable under any circumstances."
                    android:textColor="#ff000000"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:textStyle="italic"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/engine6"
                android:layout_below="@+id/about3"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/home_background_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="#ff000000"
                    android:textSize="17sp"
                    android:textStyle="bold"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/engine6"
                android:background="@drawable/home_background_selector"
                >
                <TextView
                    android:paddingTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rajkumar-7598346156"
                    android:paddingLeft="15dp"
                    android:textColor="#ff000000"
                    android:textSize="17sp"
                    android:textStyle="bold"

                    />
                <ImageButton

                    android:layout_width="wrap_content"
                    android:id="@+id/roboticscall"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    android:background="@null"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="56dp"
                    android:layout_marginEnd="56dp"
                    android:paddingBottom="5dp"/>


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gmail"
                    android:background="@null"
                    android:id="@+id/roboticsmail"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>


            <TextView
                android:id="@+id/about_title"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>